<h2><%= @post.title %>'s Details</h2>
	
	<p>
		<strong>Title: </strong>
		<%= @post.title %>
	</p>
	<p>
		<strong>Description: </strong>
		<%= @post.description %>
	</p>
	<p>
		<strong>Summary: </strong>
		<%= @post.summary %>
	</p>

	<hr>

	<h2>Comments</h2>
	<%= render @post.comments %>

	<hr>

	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>
	
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>